{
  "name": "Charashee",
  "description": "クトゥルフ神話TRPG キャラシ管理ツール",
  "keywords": [
    "laravel",
    "Vue.js",
    "Call of Chthulhu"
  ],
  "repository": "https://github.com/c6h4clch3/charashee",
  "logo": "https://github.com/c6h4clch3/charashee/blob/master/logo.png",
  "env": {
    "DB_CONNECTION": {
      "description": "DBドライバ",
      "value": "pgsql"
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-php"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "echo \"APP_KEY=$(php artisan key:generate --show)\" >> .env && php artisan migrate:fresh --seed"
  }
}
